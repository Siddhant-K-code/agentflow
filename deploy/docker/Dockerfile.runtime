# Multi-stage build for Rust runtime
FROM rust:1.70 AS builder

WORKDIR /app
COPY core/runtime ./
RUN cargo build --release

# Final stage
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /root/

COPY --from=builder /app/target/release/agentflow-runtime .

EXPOSE 8081

CMD ["./agentflow-runtime"]