# Multi-stage build for Go orchestrator
FROM golang:1.21-alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o orchestrator ./core/orchestrator

# Final stage
FROM alpine:latest

RUN apk --no-cache add ca-certificates
WORKDIR /root/

COPY --from=builder /app/orchestrator .
COPY --from=builder /app/deploy/docker/orchestrator-config.yaml ./config.yaml

EXPOSE 8080

CMD ["./orchestrator"]